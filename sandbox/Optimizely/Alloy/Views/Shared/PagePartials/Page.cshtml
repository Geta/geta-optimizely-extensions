@using EPiServer.Core
@using Geta.Optimizely.Extensions
@model SitePageData

<div class="border">
    @using(Html.BeginConditionalLink(Model.HasTemplate(), Url.PageUrl(Model).ToString, Model.PageName))
    {
        <h2>@Model.PageName</h2>
        <p>@Model.TeaserText</p>
        @Html.DisplayFor(m => m.PageImage)
    }
</div>